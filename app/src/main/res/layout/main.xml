<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sudoku">

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:background="@mipmap/ic_launcher_round"
        android:text="@string/new_game_button"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continue_game_button"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:backgroundTint="@color/minor_lines"
        android:text="@string/continue_game_button"
        app:layout_constraintBottom_toTopOf="@+id/new_game_button"
        app:layout_constraintEnd_toStartOf="@id/new_game_button" />

    <Button
        android:id="@+id/stats_button"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:backgroundTint="@color/minor_lines"
        android:text="@string/stats_button"
        app:layout_constraintBottom_toTopOf="@+id/new_game_button"
        app:layout_constraintStart_toEndOf="@id/new_game_button" />

</android.support.constraint.ConstraintLayout>